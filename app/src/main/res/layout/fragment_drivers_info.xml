<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DriversInfoFragment">

    <TextView
        android:id="@+id/tvSelectYearLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/tvSelectYearLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039" />

    <Button
        android:id="@+id/btnGetDriverData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="@string/btnGetDriverData"
        app:layout_constraintEnd_toEndOf="@id/tvSelectYearLabel"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@id/tvSelectYearLabel"
        app:layout_constraintTop_toBottomOf="@id/tvSelectYearLabel" />

    <EditText
        android:id="@+id/etEnterYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="@integer/etEnterYear"
        app:layout_constraintEnd_toEndOf="@+id/tvSelectYearLabel"
        app:layout_constraintStart_toStartOf="@+id/tvSelectYearLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvSelectYearLabel"
        android:autofillHints="2020"/>

</androidx.constraintlayout.widget.ConstraintLayout>